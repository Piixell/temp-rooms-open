<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}} - TempRooms Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/styles.css">
    <style>
        :root {
            --primary: #6f42c1;
            --primary-dark: #5a32a3;
            --secondary: #495057;
            --light: #f8f9fa;
            --dark: #212529;
            --success: #198754;
            --warning: #ffc107;
            --danger: #dc3545;
        }
        
        body {
            background-color: #f5f7fb;
            min-height: 100vh;
            font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
        }
        
        .sidebar {
            background: linear-gradient(180deg, var(--primary), var(--primary-dark));
            color: white;
            min-height: 100vh;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
        }
        
        .sidebar .nav-link {
            color: rgba(255,255,255,0.8);
            border-radius: 0.375rem;
            margin-bottom: 0.25rem;
            transition: all 0.2s;
        }
        
        .sidebar .nav-link:hover, 
        .sidebar .nav-link.active {
            color: white;
            background-color: rgba(255,255,255,0.1);
        }
        
        .sidebar .nav-link i {
            margin-right: 0.75rem;
            width: 1.25rem;
            text-align: center;
        }
        
        .main-content {
            padding: 2rem 0;
        }
        
        .card {
            border: none;
            border-radius: 1rem;
            box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.05);
            transition: transform 0.2s, box-shadow 0.2s;
            margin-bottom: 1.5rem;
        }
        
        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 0.75rem 1.5rem rgba(0,0,0,0.1);
        }
        
        .card-header {
            background: transparent;
            border-bottom: 1px solid rgba(0,0,0,0.05);
            padding: 1.25rem 1.5rem;
            font-weight: 600;
        }
        
        .btn-primary {
            background-color: var(--primary);
            border-color: var(--primary);
        }
        
        .btn-primary:hover {
            background-color: var(--primary-dark);
            border-color: var(--primary-dark);
        }
        
        .form-control, .form-select {
            border-radius: 0.5rem;
            border: 1px solid #e9ecef;
            padding: 0.75rem 1rem;
        }
        
        .form-control:focus, .form-select:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 0.25rem rgba(111, 66, 193, 0.25);
        }
        
        .alert {
            border-radius: 0.75rem;
        }
        
        .server-selector {
            background: white;
            border-radius: 0.75rem;
            box-shadow: 0 0.25rem 0.5rem rgba(0,0,0,0.05);
            padding: 1rem;
            margin-bottom: 1.5rem;
        }
        
        .server-item {
            cursor: pointer;
            padding: 0.75rem 1rem;
            border-radius: 0.5rem;
            transition: all 0.2s;
        }
        
        .server-item:hover {
            background-color: rgba(111, 66, 193, 0.1);
        }
        
        .server-item.active {
            background-color: var(--primary);
            color: white;
        }
        
        .section-title {
            font-weight: 700;
            color: var(--dark);
            margin-bottom: 1.5rem;
            padding-bottom: 0.75rem;
            border-bottom: 2px solid var(--primary);
        }
        
        .feature-list {
            list-style: none;
            padding: 0;
        }
        
        .feature-list li {
            padding: 0.5rem 0;
            display: flex;
            align-items: center;
        }
        
        .feature-list li i {
            color: var(--primary);
            margin-right: 0.75rem;
            font-size: 1.2rem;
        }
        
        footer {
            margin-top: 2rem;
            padding: 1.5rem 0;
            color: var(--secondary);
            font-size: 0.875rem;
        }
        
        .status-indicator {
            width: 10px;
            height: 10px;
            border-radius: 50%;
            display: inline-block;
            margin-right: 0.5rem;
        }
        
        .status-online {
            background-color: var(--success);
        }
        
        .status-offline {
            background-color: var(--danger);
        }
        
        .status-configuring {
            background-color: var(--warning);
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-lg-3 col-xl-2 sidebar d-flex flex-column p-3">
                <div class="d-flex align-items-center mb-4">
                    <i class="bi bi-music-note-list fs-3 me-2"></i>
                    <h2 class="h5 mb-0">TempRooms</h2>
                </div>
                
                <ul class="nav flex-column mb-auto">
                    <li class="nav-item">
                        <a href="/" class="nav-link {{#if isActiveDashboard}}active{{/if}}">
                            <i class="bi bi-speedometer2"></i>
                            Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/servers" class="nav-link {{#if isActiveServers}}active{{/if}}">
                            <i class="bi bi-discord"></i>
                            Server
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/settings" class="nav-link {{#if isActiveSettings}}active{{/if}}">
                            <i class="bi bi-gear"></i>
                            Impostazioni
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/subscription" class="nav-link {{#if isActiveSubscription}}active{{/if}}">
                            <i class="bi bi-credit-card"></i>
                            Abbonamento
                        </a>
                    </li>
                </ul>
                
                <div class="mt-auto pt-3 border-top border-opacity-25">
                    <div class="d-flex align-items-center">
                        <div class="status-indicator status-online"></div>
                        <small>Bot Online</small>
                    </div>
                    <div class="mt-2">
                        <small class="text-opacity-75">v2.0.0</small>
                    </div>
                </div>
            </div>
            
            <!-- Main Content -->
            <div class="col-lg-9 col-xl-10 main-content">
                <div class="container">
                    {{{body}}}
                </div>
            </div>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Funzione per mostrare toast di conferma
        function showToast(message, type = 'success') {
            const toastContainer = document.getElementById('toast-container') || createToastContainer();
            const toast = document.createElement('div');
            toast.className = `toast align-items-center text-white bg-${type} border-0`;
            toast.setAttribute('role', 'alert');
            toast.setAttribute('aria-live', 'assertive');
            toast.setAttribute('aria-atomic', 'true');
            
            toast.innerHTML = `
                <div class="d-flex">
                    <div class="toast-body">
                        ${message}
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            `;
            
            toastContainer.appendChild(toast);
            const bsToast = new bootstrap.Toast(toast, { delay: 3000 });
            bsToast.show();
        }
        
        function createToastContainer() {
            const container = document.createElement('div');
            container.id = 'toast-container';
            container.className = 'toast-container position-fixed bottom-0 end-0 p-3';
            container.style.zIndex = '10000';
            document.body.appendChild(container);
            return container;
        }
        
        // Gestione del form di configurazione
        document.querySelectorAll('form[data-auto-submit]').forEach(form => {
            form.addEventListener('change', function() {
                const formData = new FormData(form);
                const data = Object.fromEntries(formData);
                
                fetch(form.action, {
                    method: 'POST',
                    body: JSON.stringify(data),
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showToast('Impostazioni salvate con successo!', 'success');
                    } else {
                        showToast('Errore nel salvataggio: ' + data.error, 'danger');
                    }
                })
                .catch(error => {
                    showToast('Errore nella richiesta: ' + error.message, 'danger');
                });
            });
        });
    </script>
</body>
</html>
